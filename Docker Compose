version: '3.8'

services:
  photos-api:
    image: ghcr.io/youzisu/photos-api:latest
    container_name: photos-api
    ports:
      - "3000:3000"
    environment:
      - NODE_ENV=production
      - MONGODB_URI=mongodb://mongo:27017/photos
      - TOKEN_SECRET=your_super_secret_jwt_key_here
      - REGISTER_KEY=your_register_key_here
      - PORT=3000
    depends_on:
      - mongo
    restart: unless-stopped
    networks:
      - photos-network
    volumes:
      - photos-uploads:/app/uploads

  mongo:
    image: mongo:7-jammy
    container_name: photos-mongo
    restart: unless-stopped
    environment:
      - MONGO_INITDB_DATABASE=photos
    volumes:
      - photos-mongo-data:/data/db
    networks:
      - photos-network
    ports:
      - "27017:27017"

  mongo-express:
    image: mongo-express:latest
    container_name: photos-mongo-express
    restart: unless-stopped
    ports:
      - "8081:8081"
    environment:
      - ME_CONFIG_MONGODB_URL=mongodb://mongo:27017/photos
      - ME_CONFIG_BASICAUTH_USERNAME=admin
      - ME_CONFIG_BASICAUTH_PASSWORD=admin123
    depends_on:
      - mongo
    networks:
      - photos-network

volumes:
  photos-mongo-data:
  photos-uploads:

networks:
  photos-network:
    driver: bridge
